# GraphQL schema example
#
# https://gqlgen.com/getting-started/

enum TodoStatus {
  NOT_YET
  DONE
}

type Todo {
  id: Int!
  user_id: Int!
  name: String!
  status: TodoStatus!
}

input TodoWithoutID {
  user_id: Int!
  name: String!
  status: TodoStatus!
}

type User {
  id: Int!
  name: String!
}

type Query {
  todos: [Todo!]!
}

type Mutation {
  createTodo(input: TodoWithoutID!): Todo!
}
